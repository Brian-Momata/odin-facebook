<p style="color: green"><%= notice %></p>
<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "View comment", post_comment_path(post_id: @post, id: comment) %>
    </p>
  <% end %>
</div>

<br><%= link_to "New comment", new_post_comment_path %>
