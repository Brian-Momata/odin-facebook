<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", post_comment_path(post_id: @post, id: comment) %>
    </p>
  <% end %>
</div>

