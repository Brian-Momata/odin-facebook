<div id="<%= dom_id post %>">
  <%= image_tag post.author.gravatar_url(:size => 30) %>
  <%= link_to "#{post.author.email }", user_path(post.author) %>
  <p>
    <%= post.body %>
  </p>
  <strong>Likes:</strong>
  <%= post.likes.count %> |
  <%= link_to "Comments", post_comments_path(post) %>:
  <%= post.comments.count %>
  <%= button_to "like post", post_likes_path(post), method: :post %>
</div>
