<h1><%= image_tag @user.gravatar_url %><%= @user.email.capitalize %>'s Profile</h1>
<%= render partial: "profile", locals: { user: @user } %>
<h2>Posts</h2>
<% if @posts.empty? %>
  <p><%= @user.email %> has no posts</p>
<% else %>
  <% @posts.each do |post| %>
    <%= render post %>
  <p>
    <%= link_to "Show this post", post %>
  </p>
  <% end %>
<% end %>
