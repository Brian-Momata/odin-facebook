<h1><%= image_tag @user.gravatar_url %><%= @user.email.capitalize %></h1>
<%= render partial: "profile", locals: { user: @user } %>
<h2>Posts</h2>
<% if @posts.empty? %>
  <p><%= @user.email %> has no posts</p>
<% else %>
  <% @posts.each do |post| %>
    <%= render post %>
  <p>
    <%= link_to "View Post", post %>
  </p>
  <% end %>
<% end %>

<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_registration_path(@user) %> |
<% end %>
<%= link_to "Home", home_path %>
