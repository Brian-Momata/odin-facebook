<p>
  <strong>bio:</strong>
  <%= user.bio %>
</p>
<p>
  <strong>location:</strong>
  <%= user.location %>
</p>
<% if current_user != user%>
  <% if @followed %>
    <%= button_to "Following", unfollow_user_path, method: :delete, remote: true %>
  <% else %>
    <%= button_to "Follow", follow_user_path(follower_id: current_user, followed_user_id: @user), remote: true %>
  <% end %>
<% end %>

<%= link_to "Following", user_following_index_path(user) %>
<%= user.followed_users.count %> |
<%= link_to "Followers", user_followers_index_path(user) %>
<%= user.follower_users.count %>
 